{
    "manifest_version": 2,

    "name": "Hipstogram for Spotify",
    "description": "Use this extension to know your listening behavior when you use Spotify!",
    "version": "0.1",

    "permissions": [
        "*://play.spotify.com/*",
        "tabs",
        "background"
    ],
    "background": {
        "scripts": [ "js/background.js" ]
    },
    "browser_action": {
        "default_icon": "icons/spot-16.png",
        "default_popup": "build.html"
    },
    "icons": {
        "128": "icons/spot-128.png",
        "48": "icons/spot-48.png",
        "16": "icons/spot-16.png"
    }
}